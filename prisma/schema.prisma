
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Environment {
  id        String    @id @default(uuid())
  name      String    // e.g., "Dev", "QA", "Prod"
  token     String?   // Global token for services in this env
  order     Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  services  Service[]
}

model Service {
  id            String      @id @default(uuid())
  environmentId String
  name          String      // e.g., "Auth Worker", "API Gateway"
  url           String      // e.g., "https://api.dev.fabric/health"
  token         String?     // Optional Bearer token
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  environment   Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  healthLogs    HealthLog[]
}

model HealthLog {
  id            String   @id @default(uuid())
  serviceId     String
  status        String   // "UP" or "DOWN"
  error         String?  // Optional error message (e.g., "404 Not Found", "Timeout")
  latency       Int?     // Response time in ms
  timestamp     DateTime @default(now())

  service       Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
}
